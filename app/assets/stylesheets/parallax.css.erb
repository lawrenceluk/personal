.wave.orange {
  background-image: url(<%= asset_path 'water-orange.png' %>); 
  bottom: 140px;
  margin: 0px 0px;
}
.scene {
  min-height: 360px
}
@keyframes bobbing {
  0%   {left:19%; bottom:216px;}
  50%  {left:19%; bottom:226px;}
  100% {left:19%; bottom:216px;}
}
@-webkit-keyframes bobbing {
  0%   {left:19%; bottom:216px;}
  50%  {left:19%; bottom:226px;}
  100% {left:19%; bottom:216px;}
}
@keyframes otherbobbing {
  0%   {right:20%; bottom:247px;}
  50%  {right:20%; bottom:257px;}
  100% {right:20%; bottom:247px;}
}
@-webkit-keyframes otherbobbing {
  0%   {right:20%; bottom:247px;}
  50%  {right:20%; bottom:257px;}
  100% {right:20%; bottom:247px;}
}