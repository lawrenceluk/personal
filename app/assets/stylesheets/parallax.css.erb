.sun {
  position: absolute;
  display: block;
  right: 50%;
  bottom: 430px;
}
.cloud {
  position: absolute;
  display: block;
  right: 20%;
  bottom: 480px;
}
.boat {
  position: absolute;
  display: block;
  left: 18%;
  bottom: 220px;
  animation-timing-function:linear;
  -webkit-animation-timing-function:linear;
  animation-delay:0.41s;
  -webkit-animation-delay:0.41s;
  animation:bobbing 2.5s infinite;
  -webkit-animation:bobbing 2.5s infinite;
}
.boat.other {
  left: 80%;
  bottom: 250px;
  animation-timing-function:linear;
  -webkit-animation-timing-function:linear;
  animation:otherbobbing 5s infinite;
  -webkit-animation:otherbobbing 5s infinite;
}
.wave {
  background: transparent repeat-x;
  position: absolute;
  display: block;
  width: 300%;
  height: 80px;
  animation:wave 4s infinite;
  -webkit-animation:wave 4s infinite;
}
.wave.one {
  background-image: url(<%= asset_path 'water1.png' %>); 
  left: -101%;
  bottom: 220px;
  margin: 0px 0px;
  animation-delay:0.2s;
  -webkit-animation-delay:0.2s;
}
