  background-image: url(<%= asset_path 'water2.png' %>); 
  left: -95%;
  bottom: 210px;
  margin: 0px 0px;
  animation-delay:0.35s;
  -webkit-animation-delay:0.35s;
}
.wave.three {
  background-image: url(<%= asset_path 'water3.png' %>); 
