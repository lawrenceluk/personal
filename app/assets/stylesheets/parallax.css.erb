.sun {
  margin-left: 33%;
}
.cloud {
  position: absolute;
  top: 100px;
  animation:cloudy 300s;
  -webkit-animation:cloudy 300s;
}
.boat {
  position: absolute;
  animation-timing-function:linear;
  -webkit-animation-timing-function:linear;
  animation-delay:0.41s;
  -webkit-animation-delay:0.41s;
  animation:bobbing 3.4s infinite;
  -webkit-animation:bobbing 3.4s infinite;
}
.boat.other {
  position: absolute;
  animation-timing-function:linear;
  -webkit-animation-timing-function:linear;
  animation:otherbobbing 5s infinite;
  -webkit-animation:otherbobbing 5s infinite;
}
.wave {
  animation-timing-function:linear;
  -webkit-animation-timing-function:linear;
  background: transparent repeat-x;
  position: absolute;
  display: block;
  width: 300%;
  height: 80px;
}
.wave.one {
  background-image: url(<%= asset_path 'water1.png' %>); 
  left: -101%;
  top: 320px;
  margin: 0px 0px;
  animation:w1 4s infinite;
  -webkit-animation:w1 4s infinite;
}
.wave.two {
  background-image: url(<%= asset_path 'water2.png' %>); 
  left: -95%;
  top: 330px;
  margin: 0px 0px;
  animation:w2 4s infinite;
  -webkit-animation:w2 4s infinite;
}
.wave.three {
  background-image: url(<%= asset_path 'water3.png' %>); 
  left: -103%;
  top: 340px;
  margin: 0px 0px;
  animation:w3 4s infinite;
  -webkit-animation:w3 4s infinite;
}
.wave.four {
  background-image: url(<%= asset_path 'water4.png' %>); 
  left: -90%;
  top: 360px;
  margin: 0px 0px;
  animation:w4 4s infinite;
  -webkit-animation:w4 4s infinite;
}
.wave.light {
  background-image: url(<%= asset_path 'water-light.png' %>); 
  top: 380px;
  left: -95%;
  margin: 0px 0px;
  animation:w5 4s infinite;
  -webkit-animation:w5 4s infinite;
}
.wave.orange {
  background-image: url(<%= asset_path 'water-orange.png' %>); 
  bottom: 140px;
  margin: 0px 0px;
}
.scene {
  min-height: 360px;
  position: relative;
}
@keyframes bobbing {
  0%   {left:19%; top:132px;}
  50%  {left:19%; top:140px;}
  100% {left:19%; top:132px;}
}
@-webkit-keyframes bobbing {
  0%   {left:19%; top:132px;}
  50%  {left:19%; top:140px;}
  100% {left:19%; top:132px;}
}
@keyframes otherbobbing {
  0%   {right:26%; top:255px;}
  50%  {right:26%; top:259px;}
  100% {right:26%; top:255px;}
}
@-webkit-keyframes otherbobbing {
  0%   {right:26%; top:255px;}
  50%  {right:26%; top:259px;}
  100% {right:26%; top:255px;}
}
@keyframes cloudy {
  0%   {left:63%;}
  100% {left:20%;}
}
@-webkit-keyframes cloudy {
  0%   {left:63%;}
  100% {left:20%;}
}
@keyframes w1 {
  0%   {left:-101%;}
  50% {left: -104%;}
  100% {left:-101%;}
}
@-webkit-keyframes w1 {
  0%   {left:-101%;}
  50% {left: -104%;}
  100% {left:-101%;}
}
@keyframes w2 {
  0%   {left:-95%;}
  50% {left: -97%;}
  100% {left:-95%;}
}
@-webkit-keyframes w2 {
  0%   {left:-95%;}
  50% {left: -93%;}
  100% {left:-95%;}
}
@keyframes w3 {
  0%   {left:-103%;}
  50% {left: -107%;}
  100% {left:-103%;}
}
@-webkit-keyframes w3 {
  0%   {left:-103%;}
  50% {left: -107%;}
  100% {left:-103%;}
}
@keyframes w4 {
  0%   {left:-93%;}
  50% {left: -90%;}
  100% {left:-93%;}
}
@-webkit-keyframes w4 {
  0%   {left:-93%;}
  50% {left: -90%;}
  100% {left:-93%;}
}
@keyframes w5 {
  0%   {left:-95%;}
  50% {left: -98%;}
  100% {left:-95%;}
}
@-webkit-keyframes w5 {
  0%   {left:-95%;}
  50% {left: -98%;}
  100% {left:-95%;}
}